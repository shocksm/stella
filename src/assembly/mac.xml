<assembly xmlns="http://maven.apache.org/ASSEMBLY/2.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/ASSEMBLY/2.0.0 http://maven.apache.org/xsd/assembly-2.0.0.xsd">
  <id>mac</id>
  <formats>
    <format>zip</format>
  </formats>
  <fileSets>
    <fileSet>
      <outputDirectory>.</outputDirectory>
      <directory>target</directory>
      <includes>
        <include>stella.jar</include>
      </includes>
    </fileSet>
    <fileSet>
      <outputDirectory>drivers</outputDirectory>
      <directory>drivers</directory>
    </fileSet>
    <fileSet>
      <outputDirectory>docs</outputDirectory>
      <directory>docs</directory>
    </fileSet>
  </fileSets>
  <!-- use this section if you want to package dependencies -->
  <dependencySets>
    <dependencySet>
      <excludes>
        <exclude>org.eclipse.swt:org.eclipse.swt.win32.win32.x86</exclude>
        <exclude>org.eclipse.swt:org.eclipse.swt.win32.win32.x86_64</exclude>
        <exclude>org.eclipse.swt:org.eclipse.swt.gtk.linux.x86</exclude>
        <exclude>org.eclipse.swt:org.eclipse.swt.gtk.linux.x86_64</exclude>
      </excludes>
      <outputDirectory>lib</outputDirectory>
      <useProjectArtifact>false</useProjectArtifact>
      <scope>runtime</scope>
    </dependencySet>
  </dependencySets>
</assembly>